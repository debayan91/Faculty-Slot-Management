
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Check for admin role via custom claims. For now, we simulate this.
    // In a production app, you would set this claim on the user's token.
    function isAdmin() {
      // For now, any authenticated user can be an "admin" for testing.
      // In a real app, this would be: return request.auth.token.role == 'admin';
      return request.auth != null;
    }

    // Allow a user to read and create their own faculty document.
    match /faculties/{userId} {
      allow get, create: if isOwner(userId);
      // Admins can read/write any faculty profile
      allow read, write: if isAdmin();
    }
    
    // All authenticated users can read all slots and faculty profiles
    match /faculties/{facultyId} {
      allow read: if request.auth != null;
    }


    // Slots can be read by any authenticated user.
    match /slots/{slotId} {
      allow read: if request.auth != null;
      
      // Allow a user to update a slot only if they are assigning themselves to an unassigned slot.
      allow update: if request.auth != null
                    && request.resource.data.teacherEmpId != null
                    && resource.data.teacherEmpId == null;
      
      // Admins have full read/write access to all slots.
      allow read, write: if isAdmin();
    }

    // Activity logs are for admins, so we restrict access for now.
    match /activity_logs/{logId} {
      allow read, write: if isAdmin();
    }
  }
}
