
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------------------------------------------
    // Helper Functions
    // --------------------------------------------------------------------
    function isAuth() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuth() && request.auth.token.admin == true;
    }

    // --------------------------------------------------------------------
    // Collection: faculties
    // --------------------------------------------------------------------
    match /faculties/{userId} {
      // Any authenticated user can create their own profile.
      allow create: if isAuth();

      // Only the user themselves or an admin can read or update a profile.
      allow read, update: if isAuth() && (request.auth.uid == userId || isAdmin());

      // Deletes are disallowed for now to maintain data integrity.
      allow delete: if false;
    }

    // --------------------------------------------------------------------
    // Collection: authorized_emails
    // --------------------------------------------------------------------
    match /authorized_emails/{email} {
      // ONLY admins can view, create, or delete authorized emails.
      allow read, write: if isAdmin();
    }

    // --------------------------------------------------------------------
    // Collection: slots
    // --------------------------------------------------------------------
    match /slots/{slotId} {
      // Any authenticated user can view the schedule slots.
      allow read: if isAuth();

      // Admins have full control to create and delete slots.
      allow create, delete: if isAdmin();
      
      // Admins can update any field.
      // Faculty can only update the booking fields if they are booking/cancelling.
      allow update: if isAdmin() || 
                    (isAuth() && 
                     // Case 1: Booking a slot (must be currently unbooked)
                     (request.resource.data.booked_by == request.auth.uid && resource.data.booked_by == null) ||
                     // Case 2: Cancelling a slot (must be booked by current user)
                     (request.resource.data.booked_by == null && resource.data.booked_by == request.auth.uid)
                    );
    }
    
    // --------------------------------------------------------------------
    // Collection: dc_meeting_logs
    // --------------------------------------------------------------------
    match /dc_meeting_logs/{logId} {
      // Any authenticated user can create a log entry for themselves.
      allow create: if isAuth() && request.resource.data.facultyUid == request.auth.uid;
      
      // ONLY admins can read the logs.
      allow read, list: if isAdmin();

      // No one can update or delete logs to ensure data integrity.
      allow update, delete: if false;
    }

    // --------------------------------------------------------------------
    // Collection: schedule_templates
    // --------------------------------------------------------------------
    match /schedule_templates/{templateId} {
      // All authenticated users can read templates to see how schedules are built.
      allow read: if isAuth();

      // Only admins can create, update, or delete templates.
      allow create, update, delete: if isAdmin();
    }
  }
}
