
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Allow a user to read and create their own faculty document.
    // Update and delete are disallowed for now to prevent users from changing their role.
    match /faculties/{userId} {
      allow get, create: if isOwner(userId);
    }

    // Slots can be read by any authenticated user.
    match /slots/{slotId} {
      allow read: if request.auth != null;
      // Allow a user to update a slot only if they are booking it (isBooked: false -> true)
      allow update: if request.auth != null
                    && request.resource.data.isBooked == true
                    && request.resource.data.bookedBy != null
                    && resource.data.isBooked == false;
    }

    // Activity logs are for admins, so we restrict access for now.
    match /activity_logs/{logId} {
      allow read, write: if false; // Admin-only access will be added
    }
  }
}
